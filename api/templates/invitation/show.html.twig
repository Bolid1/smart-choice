{% extends 'base.html.twig' %}

{% block title %}Invitation{% endblock %}

{% block main_content %}
    <h1>Invitation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invitation.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ invitation.email }}</td>
            </tr>
            <tr>
                <th>Secret</th>
                <td>{{ invitation.secret }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ invitation.createdAt ? invitation.createdAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ invitation.updatedAt ? invitation.updatedAt|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Admin</th>
                <td>{{ invitation.admin ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('invitations_list') }}">back to list</a>

    <a href="{{ path('invitation_edit', {'id': invitation.id}) }}">edit</a>

    {{ include('invitation/_delete_form.html.twig') }}
{% endblock %}
