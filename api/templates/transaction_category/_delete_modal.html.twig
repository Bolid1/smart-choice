<div
        class="modal fade"
        id="{{ 'transactionCategory' ~ transactionCategory.id }}"
        tabindex="-1"
        role="dialog"
        aria-hidden="true"
>
  <div class="modal-dialog">
    <form
            class="modal-content"
            method="post"
            action="{{ path(
              'transaction_category_delete',
              {
                id: transactionCategory.id,
                company: transactionCategory.company.id,
                transaction: transactionCategory.transaction.id
              }
            ) }}"
    >
      <div class="modal-body">
        {% trans %}Are you sure you want to delete this transactionCategory?{% endtrans %}
      </div>
      <div class="modal-footer">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transactionCategory.id) }}">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          {% trans %}No{% endtrans %}
        </button>
        <button type="submit" class="btn btn-danger">
          {% trans %}Confirm{% endtrans %}
        </button>
      </div>
    </form>
  </div>
</div>
