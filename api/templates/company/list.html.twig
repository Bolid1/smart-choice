{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block main %}
    <main class="container">
        <h1>Company index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr>
                    <td>{{ company.id }}</td>
                    <td>{{ company.name }}</td>
                    <td>
                        {% if is_granted('view', company) %}
                            <a href="{{ path('companies_show', {'id': company.id}) }}">show</a>
                        {% endif %}
                        {% if is_granted('edit', company) %}
                            <a href="{{ path('companies_edit', {'id': company.id}) }}">edit</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('companies_new') }}">Create new</a>
    </main>
{% endblock %}
