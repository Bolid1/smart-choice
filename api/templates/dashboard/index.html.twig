{% extends 'base.html.twig' %}

{% block title %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block main_content %}
  <h1 class="text-center col-12">
    {{ company.name }} <sup>
      <a class="link" href="{{ path('company_edit', {id: company.id}) }}">
        {% include 'icons/_pencil.svg.twig' %}
      </a>
    </sup>
  </h1>

  <div class="row mb-2">
    <div class="col col-12 col-lg-4">
      <h4 class="d-flex justify-content-between">
        <span>
          {% trans %}Accounts{% endtrans %}
        </span>

        {% if is_granted('pre_create_account', company) %}
          <a href="{{ path('account_new', { company: company.id }) }}" class="small">
            {% trans %}Create account{% endtrans %}
          </a>
        {% endif %}
      </h4>


      {% for account in accounts %}
        {% include 'dashboard/_account_card.html.twig' %}
      {% endfor %}
    </div>
    <div class="col col-lg-8">

    </div>
  </div>

  <div class="row">
    <h4 class="col-12">
      {% trans %}Company users{% endtrans %}
    </h4>
    {% for right in rights %}
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ right.user }}</h5>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
